@model tblEmpMst
@{
    ViewBag.Title = "Add Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaveEmp", "Employee", FormMethod.Post, new { id = "RequestForm" }))
{
    <div class="row">
        <div class="col-md-12">
            <label>Emp Name</label>
            @Html.Hidden("EmpMstId", Model.EmpMstId);
            @Html.TextBox("EmpName", Model.EmpName, new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" id="divEmpDetail">
            @{Html.RenderAction("GetEmpDetil", "Employee", new { paramtblEmpMst = Model });}

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-primary btn-lg" type="submit">Save</button>
        </div>
    </div>
}

